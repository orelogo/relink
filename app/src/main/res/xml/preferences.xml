<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="notify"
        android:title="Notifications"
        android:defaultValue="true" />

    <ListPreference
        android:dependency="notify"
        android:key="notifyInterval"
        android:title="@string/notify_interval"
        android:summary="@string/notify_interval_summary"
        android:dialogTitle="Notify me"
        android:entries="@array/notify_interval_entries"
        android:entryValues="@array/time_scale_values"
        android:defaultValue="@string/week_default" />

    <EditTextPreference
        android:key="defaultTimeNumber"
        android:title="@string/time_number_title"
        android:inputType="numberDecimal"
        android:defaultValue="@string/time_number_default" />

    <ListPreference
        android:key="defaultTimeScale"
        android:title="@string/time_scale_title"
        android:entries="@array/time_scale_plural"
        android:entryValues="@array/time_scale_values"
        android:defaultValue="w" />

    <ListPreference
        android:key="defaultDelay"
        android:title="@string/delay_button_title"
        android:summary="@string/delay_button_summary"
        android:dialogTitle="@string/delay_1"
        android:entries="@array/time_scale_singular"
        android:entryValues="@array/time_scale_values"
        android:defaultValue="w" />

</PreferenceScreen>